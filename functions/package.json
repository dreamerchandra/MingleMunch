{
  "name": "MingleMunch",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "npx tsc",
    "serve": "node dist/index.js",
    "watch": "npx tsc --watch",
    "export": "export GOOGLE_APPLICATION_CREDENTIALS=\"./service-account.json \"",
    "shell": "firebase emulators:start --only functions && firebase functions:shell",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\"",
    "start": "concurrently \"npm run dev\" \"npm run shell\"",
    "mock:prod": "npm run export && npm run dev && npm run shell"
  },
  "engines": {
    "node": "20"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.16.0",
    "concurrently": "^8.0.1",
    "nodemon": "^2.0.22",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase-admin": "^11.7.0",
    "firebase-functions": "^4.3.1",
    "twilio": "^4.20.1"
  }
}
