{
  "compilerOptions": {
    "target": "es6",
    "module": "Node16",
    "moduleResolution": "node16",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true /* Skip type checking all .d.ts files. */ ,
    "typeRoots": ["./types"]
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "dist"
  ]
}